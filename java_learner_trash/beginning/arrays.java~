public class arrays
{
public static void main(String[] args)
{
int fun[];		/**** only these two types of declarations are allowed*/ 
//int [] fun;
fun = new int[10];
fun={9,8,6};
for(int i=0;i<10;i++)	
System.out.println("  " +fun[i]);


int [] funny= {1,2,3,4,5};


/******************** 
int fun[10];    NOT ALLOWED **************/
/**** ALL INITIALISED TO VALUE ZERO THIS WAY ***/ 

System.out.println("  " +fun[2]);


/********* giving out of limits BOUNDS IN THE ARRAY THEN IT GIVES THE WARNING SAYING THAT OUT_OF_LIMITS EXCEPTION****/


for(int i=0;i<5;i++)	
System.out.println("  " +funny[i]);


/*********TRYING TO CHECK THE ARRAY MEMBER WHICH IS AUTOMATICALLY EXIST CALLED array_name.length******/

System.out.println(" \t " +funny.length);
for(int i=0;i<(funny.length+2);i++)	//error as +2 
System.out.println("  " +funny[i]);

}

}
